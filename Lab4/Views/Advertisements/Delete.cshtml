@model Assignment2.Models.ViewModels.FileInputViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h1>Delete ad for brokerage @Model.BrokerageTitle</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Advertisement</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                File Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ad.FileName)
            </dd>
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <img src="@Html.DisplayFor(model => model.Ad.Url)" style="max-width: 401px;" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.Ad.AdvertisementId" />    
            <input type="hidden" name="broId" value="@Model.Ad.BrokerageId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-id="@Model.Ad.BrokerageId">Back to List</a>
        </form>
    </div>
</div>


